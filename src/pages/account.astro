<script is:inline src="/auth.js"></script>
    <script>
    // Theme with active button and system detection
    function setTheme(theme) {
        document.body.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
        
        // إزالة active من كل الأزرار
        document.querySelectorAll('.theme-btn').forEach(btn => btn.classList.remove('active'));
        
        // إضافة active للزر المحدد
        if (theme === 'dark') {
            document.getElementById('theme-btn-dark').classList.add('active');
        } else if (theme === 'light') {
            document.getElementById('theme-btn-light').classList.add('active');
        } else {
            document.getElementById('theme-btn-system').classList.add('active');
        }
    }
    
    // Load saved theme
    const savedTheme = localStorage.getItem('theme') || 'default';
    setTheme(savedTheme);
    
    // Listen for system theme changes (for default/auto mode)
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
        if (document.body.getAttribute('data-theme') === 'default') {
            // Force re-apply to trigger CSS media query
            document.body.setAttribute('data-theme', 'default');
        }
    });
</script>
